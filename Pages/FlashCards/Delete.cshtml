@page
@model FlashCardsDemo.Pages.FlashCards.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<div class="cards-header">
    <h4>Delete</h4>
    <small>Are you sure you want to delete this?</small>
    </div>
    <div>
        <h4>FlashCard</h4>
        <table class="table table-bordered tb-style">
            <thead>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.FlashCard.Question)</td>
                    <td> @Html.DisplayFor(model => model.FlashCard.Question)</td>
                </tr>
                <tr>
                    <td> @Html.DisplayNameFor(model => model.FlashCard.Answer)</td>
                    <td> @Html.DisplayFor(model => model.FlashCard.Answer)</td>
                </tr>

                <tr>
                    <td> @Html.DisplayNameFor(model => model.FlashCard.CourseId)</td>
                    <td> @Html.DisplayFor(model => model.FlashCard.CourseId)</td>
                </tr>
                <tr>
                    <td>  @Html.DisplayNameFor(model => model.FlashCard.CreatonTime)</td>
                    <td>  @Html.DisplayFor(model => model.FlashCard.CreatonTime)</td>
                </tr>

            </thead>
        </table>

        <form method="post">
            <input type="hidden" asp-for="FlashCard.Id" />
            <button type="submit" value="Delete" class="btn btn-danger btn-sm "><i class="fa fa-trash" aria-hidden="true"></i> </button>
            <a class="btn btn-secondary  btn-sm" asp-page="./Index">Back to List <i class="fa fa-arrow-left" aria-hidden="true"></i></a>
        </form>
    </div>
